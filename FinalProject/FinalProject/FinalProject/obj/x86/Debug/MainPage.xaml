<Page x:ConnectionId='1'
    x:Class="FinalProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinalProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:FinalProject.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="143*"/>
            <RowDefinition Height="857*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer x:ConnectionId='2' x:Name="scrollViewer" Grid.Column="0" Grid.Row="1">
            <ListView x:ConnectionId='11' Visibility="Collapsed" x:Name="NoteList"                                   
                                                                             >
                <ListView.ItemTemplate>
                    <DataTemplate                           >
                        <StackPanel x:ConnectionId='13' Orientation="Horizontal">
                            <TextBlock x:ConnectionId='14'                     ></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
        <StackPanel Margin="5" Height="auto" Width="auto" Grid.Column="1" Grid.Row="1">
            <TextBlock x:ConnectionId='5' x:Name="FlightName" Margin="5" Height="auto" Width="auto" FontSize="20" 
                 TextAlignment="Left" TextWrapping="Wrap"
                                                            />
            <TextBlock x:ConnectionId='6' x:Name="FlightNum" Margin="5" Height="auto" Width="auto" FontSize="20" 
                 TextAlignment="Left" TextWrapping="Wrap"
                                                           />
            <TextBlock x:ConnectionId='7' x:Name="FlightCountry" Margin="5" Height="auto" Width="auto" FontSize="20" 
                 TextAlignment="Left" TextWrapping="Wrap"
                                                               />
            <TextBlock x:ConnectionId='8' x:Name="FlightLong" Margin="5" Height="auto" Width="auto" FontSize="20" 
                 TextAlignment="Left" TextWrapping="Wrap"
                                                            />
            <TextBlock x:ConnectionId='9' x:Name="FlightLat" Margin="5" Height="auto" Width="auto" FontSize="20" 
                 TextAlignment="Left" TextWrapping="Wrap"
                                                           />
            <TextBlock x:ConnectionId='10' x:Name="FlightVel" Margin="5" Height="auto" Width="auto" FontSize="20" 
                 TextAlignment="Left" TextWrapping="Wrap"
                                                           />
        </StackPanel>
        <TextBox x:ConnectionId='3' x:Name="FilterTextBox" ToolTipService.ToolTip="Type text here for search" 
                                                                                                                                       
                 PlaceholderText="Search for a country..." Margin="5,5,5,54" Grid.RowSpan="1" Grid.Row="0" Grid.Column="0" FontSize="17" />
        <Button x:ConnectionId='4'                            x:Name="SearchButton" Margin="5,66,0,0" Height="39" Width="135" VerticalAlignment="Top">Search</Button>

    </Grid>
</Page>

