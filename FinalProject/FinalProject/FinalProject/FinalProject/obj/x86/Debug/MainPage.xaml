<Page x:ConnectionId='1'
    x:Class="FinalProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinalProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:FinalProject.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="800" Width="1600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="143*"/>
            <RowDefinition Height="857*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer x:ConnectionId='2' x:Name="scrollViewer" Grid.Column="0" Grid.Row="1">
            <ListView x:ConnectionId='17' Visibility="Collapsed" x:Name="NoteList"                                   
                                                                             >
                <ListView.ItemTemplate>
                    <DataTemplate                           >
                        <StackPanel x:ConnectionId='19' Orientation="Horizontal">
                            <TextBlock x:ConnectionId='20'                     ></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
        <StackPanel x:ConnectionId='3' x:Name="display" Margin="5" Height="auto" Width="auto" Grid.Column="1" Grid.Row="1">
            <TextBlock x:ConnectionId='9' x:Name="FlightName" Margin="5" Height="auto" Width="auto" FontSize="20" 
                 TextAlignment="Left" TextWrapping="Wrap"
                                                            />
            <TextBlock x:ConnectionId='10' x:Name="FlightNum" Margin="5" Height="auto" Width="auto" FontSize="20" 
                 TextAlignment="Left" TextWrapping="Wrap"
                                                           />
            <TextBlock x:ConnectionId='11' x:Name="FlightCountry" Margin="5" Height="auto" Width="auto" FontSize="20" 
                 TextAlignment="Left" TextWrapping="Wrap"
                                                               />
            <TextBlock x:ConnectionId='12' x:Name="FlightLong" Margin="5" Height="auto" Width="auto" FontSize="20" 
                 TextAlignment="Left" TextWrapping="Wrap"
                                                            />
            <TextBlock x:ConnectionId='13' x:Name="FlightLat" Margin="5" Height="auto" Width="auto" FontSize="20" 
                 TextAlignment="Left" TextWrapping="Wrap"
                                                           />
            <TextBlock x:ConnectionId='14' x:Name="FlightVel" Margin="5" Height="auto" Width="auto" FontSize="20" 
                 TextAlignment="Left" TextWrapping="Wrap"
                                                           />
            <TextBlock x:ConnectionId='15' x:Name="FlightGround" Margin="5" Height="auto" Width="auto" FontSize="20" 
                 TextAlignment="Left" TextWrapping="Wrap"
                                                              ></TextBlock>
            <TextBlock x:ConnectionId='16' x:Name="FlightSpi" Margin="5" Height="auto" Width="auto" FontSize="20" 
                 TextAlignment="Left" TextWrapping="Wrap"
                                                           ></TextBlock>
        </StackPanel>
        <TextBox x:ConnectionId='4' x:Name="FilterTextBox" ToolTipService.ToolTip="Type text here for search" 
                                                                                                                                       
                 PlaceholderText="Search for a country..." Margin="5,5,5,54" Grid.RowSpan="1" Grid.Row="0" Grid.Column="0" FontSize="17" />
        <Button x:ConnectionId='5'                            IsEnabled="False" x:Name="SearchButton" Margin="5,66,0,0" Height="39" Width="135" VerticalAlignment="Top">Search</Button>
        <RadioButton x:ConnectionId='6'                                                                          Margin="149,60,0,0" VerticalAlignment="Top">On Ground</RadioButton>
        <RadioButton x:ConnectionId='7'                                                                    Margin="149,86,0,682" VerticalAlignment="Stretch" Grid.RowSpan="2">SPI Flight</RadioButton>
        <TextBlock x:ConnectionId='8' Visibility="Collapsed" x:Name="countryNameTextBlock" Text="Enter a country" FontSize="25" Margin="261,69,19,8"/>
    </Grid>
</Page>

